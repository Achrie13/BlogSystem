<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="420.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cczu.blogsystem.controller.UpdateBlogController">

    <Label layoutX="50.0" layoutY="20.0" text="博客ID："/>
    <TextField fx:id="blogIdField" layoutX="130.0" layoutY="15.0" prefWidth="400.0"/>

    <Label layoutX="50.0" layoutY="60.0" text="标题："/>
    <TextField fx:id="titleField" layoutX="130.0" layoutY="55.0" prefWidth="400.0" promptText="请输入博客标题"/>

    <Label layoutX="50.0" layoutY="110.0" text="内容："/>
    <TextArea fx:id="contentArea" layoutX="130.0" layoutY="105.0" prefHeight="150.0" prefWidth="400.0"
              promptText="请输入博客内容"/>

    <Label layoutX="50.0" layoutY="270.0" text="博客类型："/>
    <TextField fx:id="typeField" layoutX="130.0" layoutY="265.0" prefWidth="400.0" promptText="请输入博客类型"/>

    <Button layoutX="430.0" layoutY="320.0" onAction="#handleUpdate" prefWidth="100.0" text="更新"/>

</AnchorPane>
